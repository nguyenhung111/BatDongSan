<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_marginBottom="5dp"
        app:cardCornerRadius="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:padding="5dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:orientation="vertical">

                <FrameLayout
                    android:id="@+id/framelayout"
                    android:layout_width="match_parent"
                    android:layout_height="200dp">

                    <ImageView
                        android:id="@+id/image"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/home" />
                    <TextView
                        android:visibility="visible"
                        android:id="@+id/loaitin"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="top|left"
                        android:background="@drawable/viewloaitin"
                        android:padding="5dp"
                        android:textSize="14dp"
                        android:text="Nổi bật"
                        android:textColor="@color/white" />
                    <TextView
                        android:id="@+id/phone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom|right"
                        android:background="@drawable/radiusbutton"
                        android:drawableLeft="@drawable/ic_baseline_call_24"
                        android:padding="10dp"
                        android:text="0335236374"
                        android:textColor="@color/colorPrimaryDark" />
                </FrameLayout>

                <TextView
                    android:id="@+id/tittle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_baseline_star_24"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:text="Tiêu đề "
                    android:textColor="@color/colorRed"
                    android:textSize="18dp">

                </TextView>

                <TextView
                    android:id="@+id/price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Giá"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/acreage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Diện tích"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Địa chỉ"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/datepost"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Ngày đăng"
                    android:textSize="18dp" />
            </LinearLayout>

        </FrameLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>