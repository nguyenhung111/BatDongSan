<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment.AccountFragment">

    <LinearLayout
        android:weightSum="2"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@drawable/logotrangchu"
        android:backgroundTint="@color/blue"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imgAva"
            android:layout_weight="1"
            android:layout_width="300dp"
            android:layout_height="match_parent"
            android:src="@drawable/ic_baseline_account_circle_24">
        </ImageView>
        <LinearLayout
            android:gravity="start"
            android:layout_gravity="start"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_gravity="center"
                android:gravity="center"
                android:visibility="visible"
                android:layout_weight="1"
                android:id="@+id/fullName"
                android:text="Họ tên"
                android:textSize="22dp"
                android:textColor="@color/white"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            </TextView>
            <TextView
                android:layout_gravity="center"
                android:gravity="center"
                android:visibility="visible"
                android:layout_weight="1"
                android:id="@+id/sdt"
                android:text="Số điện thoại"
                android:textSize="22dp"
                android:textColor="@color/white"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            </TextView>
        </LinearLayout>
    </LinearLayout>
    <RelativeLayout
        android:layout_marginTop="100dp"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/linerInforPerSon"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="130dp">
            <TextView
                android:padding="10dp"
                android:textColor="@color/black"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="#D5CFCF"
                android:gravity="center|start"
                android:textSize="22dp"
                android:text="Quản lý thông tin cá nhân"/>
            <TextView
                android:id="@+id/managerinfor"
                android:padding="10dp"
                android:textColor="#7C7373"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:textSize="16dp"
                android:gravity="center|start"
                android:text="Quản lý thông tin cá nhân"/>
            <TextView
                android:id="@+id/changepass"
                android:padding="10dp"
                android:textColor="#7C7373"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:textSize="16dp"
                android:gravity="center|start"
                android:text="Thay đổi mật khẩu"/>
        </LinearLayout>

        <LinearLayout
            android:layout_below="@+id/linerInforPerSon"
            android:id="@+id/LinerListing"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="130dp">
            <TextView
                android:padding="10dp"
                android:textColor="@color/black"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="#D5CFCF"
                android:gravity="center|start"
                android:textSize="22dp"
                android:text="Quản lý tin rao"/>
            <TextView
                android:id="@+id/managerlisting"
                android:padding="10dp"
                android:textColor="#7C7373"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:textSize="16dp"
                android:gravity="center|start"
                android:text="Quản lý tin rao bán/cho thuê"/>
            <TextView
                android:id="@+id/postlisting"
                android:padding="10dp"
                android:textColor="#7C7373"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:textSize="16dp"
                android:gravity="center|start"
                android:text="Đăng tin rao bán/cho thuê"/>
        </LinearLayout>
        <LinearLayout
            android:layout_below="@+id/LinerListing"
            android:id="@+id/linerMoney"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="130dp">
            <TextView
                android:padding="10dp"
                android:textColor="@color/black"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="#D5CFCF"
                android:gravity="center|start"
                android:textSize="22dp"
                android:text="Quản lý tài chính"/>
            <TextView
                android:id="@+id/informoney"
                android:padding="10dp"
                android:textColor="#7C7373"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:textSize="16dp"
                android:gravity="center|start"
                android:text="Thông tin số dư"/>
            <TextView
                android:id="@+id/historydeal"
                android:padding="10dp"
                android:textColor="#7C7373"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:textSize="16dp"
                android:gravity="center|start"
                android:text="Lịch sử giao dịch"/>
        </LinearLayout>

        <LinearLayout
            android:layout_below="@+id/linerMoney"
            android:padding="20dp"
            android:id="@+id/btnLiner"
            android:layout_weight="2"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
                <Button
                    android:id="@+id/loginAcc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/radiusbutton"
                    android:text="Đăng nhập">
                </Button>

                <Button
                    android:id="@+id/registrationAcc"
                    android:layout_marginLeft="30dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/radiusbutton"
                    android:text="Đăng ký">
                </Button>
                <Button
                    android:layout_gravity="right"
                    android:visibility="gone"
                    android:id="@+id/btnlogout"
                    android:layout_marginLeft="30dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/radiusbutton"
                    android:text="Đăng xuất">
                </Button>
        </LinearLayout>
    </RelativeLayout>
</FrameLayout>