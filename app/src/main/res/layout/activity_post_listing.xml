<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activity.PostListing">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        app:title="Đăng tin rao bán/cho thuê"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints">
    </androidx.appcompat.widget.Toolbar>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:id="@+id/tieude"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="50dp">
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:text="Tiêu đề"
                    android:textColor="@color/black"
                    android:gravity="start|center"
                    android:textSize="20dp"/>
                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <com.google.android.material.textfield.TextInputEditText
                        app:counterMaxLength="1000"
                        android:maxLength="30"
                        app:errorEnabled="true"
                        android:layout_marginLeft="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                    </com.google.android.material.textfield.TextInputEditText>
                </ScrollView>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/hinhthuc"
                android:layout_below="@+id/tieude"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="50dp">
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:text="Hình thức"
                    android:textColor="@color/black"
                    android:gravity="start|center"
                    android:textSize="20dp"/>
                <Spinner
                    android:layout_marginLeft="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/loai"
                android:layout_below="@+id/hinhthuc"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="50dp">
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:text="Loại"
                    android:textColor="@color/black"
                    android:gravity="start|center"
                    android:textSize="20dp"/>
                <Spinner
                    android:spinnerMode="dialog"
                    android:layout_marginLeft="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/dientich"
                android:layout_below="@+id/loai"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="50dp">
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:text="Diện tích"
                    android:textColor="@color/black"
                    android:gravity="start|center"
                    android:textSize="20dp"/>
                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_marginLeft="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                    </com.google.android.material.textfield.TextInputEditText>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/giatien"
                android:layout_below="@+id/dientich"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="50dp">
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:text="Giá tiền"
                    android:textColor="@color/black"
                    android:gravity="start|center"
                    android:textSize="20dp"/>
                <com.google.android.material.textfield.TextInputEditText
                    android:layout_marginLeft="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                </com.google.android.material.textfield.TextInputEditText>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/diachi"
                android:layout_below="@+id/giatien"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="50dp">
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:text="Địa chỉ"
                    android:textColor="@color/black"
                    android:gravity="start|center"
                    android:textSize="20dp"/>
                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_marginLeft="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                    </com.google.android.material.textfield.TextInputEditText>
                </ScrollView>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/hinhanh"
                android:layout_below="@+id/diachi"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="130dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:text="Hình ảnh :"
                    android:textColor="@color/black"
                    android:textSize="20dp"/>
                <Button
                    android:text="Thêm ảnh"
                    android:gravity="top"
                    android:layout_gravity="center|top"
                    android:background="@drawable/ic_baseline_add_photo_alternate_24"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/motanoidung"
                android:layout_below="@+id/hinhanh"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/editpass1"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/editaccount1"
                        android:layout_marginTop="10dp"
                        app:passwordToggleEnabled="true">

                    <com.google.android.material.textfield.TextInputEditText
                        app:counterMaxLength="3000"
                        android:maxLength="30"
                        app:errorEnabled="true"
                        android:id="@+id/editpass"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_below="@id/editaccount"
                        android:layout_marginTop="10dp"
                        android:hint="Nội dung mô tả "
                        android:textSize="20dp">
                    </com.google.android.material.textfield.TextInputEditText>
                    </com.google.android.material.textfield.TextInputLayout>
                </ScrollView>
            </LinearLayout>
           <TextView
               android:id="@+id/thongtinkhac"
               android:layout_below="@+id/motanoidung"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:textSize="20dp"
               android:textColor="@color/black"
               android:text="THÔNG TIN KHÁC"/>
            <LinearLayout
                android:id="@+id/sotang"
                android:orientation="horizontal"
                android:layout_below="@+id/thongtinkhac"
                android:layout_width="match_parent"
                android:layout_height="50dp">
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:text="Số tầng"
                    android:textSize="16dp"
                    android:textColor="@color/black"
                    android:gravity="start|center"/>
                <LinearLayout
                    android:gravity="end"
                    android:layout_marginRight="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <Button
                        android:layout_marginRight="10dp"
                        android:background="@drawable/radiuscongtru"
                        android:focusable="false"
                        android:text="-"
                        android:id="@+id/btnTru2"
                        android:textColor="#FFFFFF"
                        android:textSize="22dp"
                        android:layout_width="40dp"
                        android:layout_height="40dp" />
                    <TextView
                        android:gravity="center"
                        android:id="@+id/btnvalues2"
                        android:layout_width="75dp"
                        android:layout_height="50dp"
                        android:background="@null"
                        android:focusable="false"
                        android:textSize="20dp" />
                    <Button
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/radiuscongtru"
                        android:focusable="false"
                        android:text="+"
                        android:textColor="#FFFFFF"
                        android:id="@+id/btnCong2"
                        android:textSize="22dp"
                        android:layout_width="40dp"
                        android:layout_height="40dp" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/phongngu"
                android:orientation="horizontal"
                android:layout_below="@+id/sotang"
                android:layout_width="match_parent"
                android:layout_height="50dp">
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:text="Số phòng ngủ"
                    android:textSize="16dp"
                    android:textColor="@color/black"
                    android:gravity="start|center"/>
                <LinearLayout
                    android:gravity="end"
                    android:layout_marginRight="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <Button
                        android:layout_marginRight="10dp"
                        android:background="@drawable/radiuscongtru"
                        android:focusable="false"
                        android:text="-"
                        android:id="@+id/btnTru"
                        android:textColor="#FFFFFF"
                        android:textSize="22dp"
                        android:layout_width="40dp"
                        android:layout_height="40dp" />
                    <TextView
                        android:gravity="center"
                        android:id="@+id/btnvalues"
                        android:layout_width="75dp"
                        android:layout_height="50dp"
                        android:background="@null"
                        android:focusable="false"
                        android:textSize="20dp" />
                    <Button
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/radiuscongtru"
                        android:focusable="false"
                        android:text="+"
                        android:textColor="#FFFFFF"
                        android:id="@+id/btnCong"
                        android:textSize="22dp"
                        android:layout_width="40dp"
                        android:layout_height="40dp" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/toilet"
                android:orientation="horizontal"
                android:layout_below="@+id/phongngu"
                android:layout_width="match_parent"
                android:layout_height="50dp">
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:text="Số toilet"
                    android:textSize="16dp"
                    android:textColor="@color/black"
                    android:gravity="start|center"/>
                <LinearLayout
                    android:gravity="end"
                    android:layout_marginRight="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <Button
                        android:layout_marginRight="10dp"
                        android:background="@drawable/radiuscongtru"
                        android:focusable="false"
                        android:text="-"
                        android:id="@+id/btnTru1"
                        android:textColor="#FFFFFF"
                        android:textSize="22dp"
                        android:layout_width="40dp"
                        android:layout_height="40dp" />
                    <TextView
                        android:gravity="center"
                        android:id="@+id/btnvalues1"
                        android:layout_width="75dp"
                        android:layout_height="50dp"
                        android:background="@null"
                        android:focusable="false"
                        android:textSize="20dp" />
                    <Button
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/radiuscongtru"
                        android:focusable="false"
                        android:text="+"
                        android:textColor="#FFFFFF"
                        android:id="@+id/btnCong1"
                        android:textSize="22dp"
                        android:layout_width="40dp"
                        android:layout_height="40dp" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/huongnha"
                android:layout_below="@+id/toilet"
                android:layout_width="match_parent"
                android:layout_height="50dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Chọn hướng nhà"
                    android:textSize="18dp"
                    android:textColor="@color/black"
                    android:gravity="start|center"/>

                <Spinner
                    android:layout_marginLeft="10dp"
                    android:spinnerMode="dialog"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                </Spinner>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/huongbancong"
                android:layout_below="@+id/huongnha"
                android:layout_width="match_parent"
                android:layout_height="50dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Hướng ban công"
                    android:textSize="18dp"
                    android:textColor="@color/black"
                    android:gravity="start|center"/>

                <Spinner
                    android:layout_marginLeft="10dp"
                    android:spinnerMode="dialog"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                </Spinner>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/noithat"
                android:layout_below="@+id/huongbancong"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/txtnoithat"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/editaccount1"
                        android:layout_marginTop="10dp"
                        app:passwordToggleEnabled="true">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/edtnoithat"
                            app:counterMaxLength="200"
                            android:maxLength="30"
                            app:errorEnabled="true"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_below="@id/editaccount"
                            android:layout_marginTop="10dp"
                            android:hint="Nội thất"
                            android:textSize="20dp">
                        </com.google.android.material.textfield.TextInputEditText>
                    </com.google.android.material.textfield.TextInputLayout>
                </ScrollView>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/phaply"
                android:layout_below="@+id/noithat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/txtphaply"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/editaccount1"
                        android:layout_marginTop="10dp"
                        app:passwordToggleEnabled="true">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/editphaply"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_below="@id/editaccount"
                            android:layout_marginTop="10dp"
                            android:hint="Thông tin pháp lý"
                            android:textSize="20dp">
                        </com.google.android.material.textfield.TextInputEditText>
                    </com.google.android.material.textfield.TextInputLayout>
                </ScrollView>
            </LinearLayout>
            <Button
                android:layout_marginTop="15dp"
                android:layout_below="@+id/phaply"
                android:id="@+id/countine"
                android:text="TIẾP TỤC"
                android:textColor="@color/white"
                android:textSize="24dp"
                android:background="@color/blue"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            </Button>
        </RelativeLayout>
    </ScrollView>
</LinearLayout>